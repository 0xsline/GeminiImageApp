# ===================================
# Gemini Image App - Environment Variables Template
# ===================================
# Copy this file to .env and fill in your actual values

# ===== Google AI / Gemini API =====
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_google_api_key_here

# ===== Flask Configuration =====
# Secret key for session management (generate a random string for production)
SECRET_KEY=your_secret_key_here

# Flask environment (development/production/testing)
FLASK_ENV=development
FLASK_DEBUG=1

# ===== Application Settings =====
# Maximum file upload size in bytes (default: 16MB)
MAX_CONTENT_LENGTH=16777216

# ===== Model Configuration =====
# Default Gemini models to use
DEFAULT_VISION_MODEL=gemini-2.0-flash
DEFAULT_GENERATION_MODEL=imagen-3.0-generate-002
GEMINI_VISION_MODEL=gemini-2.0-flash
GEMINI_IMAGE_GEN_MODEL=gemini-2.0-flash-exp-image-generation
IMAGEN_MODEL=imagen-3.0-generate-002
GEMINI_SEGMENTATION_MODEL=gemini-2.0-flash

# ===== File Storage Paths =====
# These are relative to the project root
UPLOAD_FOLDER=storage/uploads
GENERATED_FOLDER=storage/generated
MODELS_FOLDER=storage/models

# ===== Server Configuration =====
# Backend server settings
BACKEND_HOST=127.0.0.1
BACKEND_PORT=5000

# Frontend server settings (for development)
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=3000

# ===== CORS Settings =====
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== Logging =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===== Production Settings =====
# Only uncomment and set these in production
# SSL_DISABLE=False
# DATABASE_URL=sqlite:///app.db
